<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th><%= @ranking.title %></th>
        </tr>
        <tr>
          <td><%= @ranking.introduction %></td>
        </tr>
        <% @ranking.items.each do |item| %>
          <tr>
            <td>
              <%= link_to item_path(item), class: 'hoge' do %>
              <%= image_tag attachment_url(item, :image, :fill, 150, 150, format: "jpg") %>
              <% end %>
            </td>
            <td class="align-middle"><%= item.name %></td>
            <td class="align-middle"><%= item.body %></td>
            <td class="align-middle">いいねといいねの数</td>
            <td class="align-middle">コメント数</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
